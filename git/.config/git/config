[push]
    default = simple
[color]
    ui = true
    diff = auto
    status = auto
    branch = auto
[core]
    excludesfile = /Users/voidedgin/.global_ignore
    editor = vim
    ignorecase = false
[alias]
    st = status -sb
    c = commit
    caa = commit --amend -a
    cm = commit -m
    cam = commit -am
    co = checkout
    b = branch
    r = reset ; reset and change index leave file changes
    rh = reset --hard ; reset, change index and remove file changes
    rs = reset --soft ; reset, leave index and file changes
    undo = reset --soft HEAD^ ; undo a commit if forgot to include changes
    cl = clean -fxd ; force remove untracked files and directories including ignored
    fr = "!git fetch && git rebase"

    # Log format
    #l = log --pretty=format:'%C(yellow)%h%Creset %ad %s %Cred(%an)%Creset' --date=short --graph --decorate
    l = "!source ~/.config/git/helpers.sh && pretty_log"

    #branch history
    bh = "!source ~/.config/git/helpers.sh && branch_stats"

    #close current merged branch
    p = "!source ~/.config/git/helpers.sh && pull_push_origin"
    pp = "!source ~/.config/git/helpers.sh && pull_push"
    pnp = "!source ~/.config/git/helpers.sh && pull_npm_push"

[merge]
    branchdesc = true
    log = true
    tool = vimdiff
    conflictstyle = diff3
[diff]
    tool = vimdiff
[mergetool]
    prompt = false
[rerere]
    enabled = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[pull]
	rebase = true
